<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
 <channel>
  <title>{{ site.title  | xml_escape }} - R</title>
  <description>Posts tagged as 'R'</description>
     <atom:link href="{{ site.url }}/feeds/feed.xml" rel="self" type="application/rss+xml" />
  <link>{{ site.url }}/tag/R/</link>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
   <name>{{ site.author.name }}</name>
   <email>{{ site.author.email }}</email>
  </author>

 {% for post in site.posts %}
{% if post.categories contains 'R' %}
<entry>
        <title>{{ post.title }}</title>
        <link href="{{ site.production_url }}{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ site.production_url }}{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
{% endif %}
{% endfor %}
 </channel>
</rss>
